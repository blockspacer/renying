{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vue"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "useCache": true
    }
  }
}